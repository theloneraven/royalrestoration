        && BIT_CHK(7544) && !BIT_CHK(12465)
        && CHK_DAYS_STARTEND(7, 26, 8, 20))
    {
        CALL_EVENT(489, 75);
        CALL_EVENT(489, 80);
        BIT_ON(12465);
        BIT_ON(2241);
    }
    if (GET_CONFIG_INT_VALUE("p5rpc.events.restoredevents", "shinjuku")
        && BIT_CHK(7944) && !BIT_CHK(12466)
        && CHK_DAYS_STARTEND(9, 19, 10, 10)
        && (BIT_CHK(2123) || !CHK_DAYS_STARTEND(10, 3, 10, 4))) // yoshizawa check
    {
        CALL_EVENT(740, 151);
        CALL_EVENT(740, 152);
        if (GET_CONFIG_INT_VALUE("p5rpc.events.restoredevents", "angelandjulian")) { CALL_EVENT(740, 153); }
        BIT_ON(12466);
    }
