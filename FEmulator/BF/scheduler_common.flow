void RestoredHangouts()
{
    if (GET_CONFIG_INT_VALUE("p5rpc.events.restoredevents", "karaoke")
        && BIT_CHK(6344) && !BIT_CHK(12461)
        && (CHK_DAYS_STARTEND(4, 18, 4, 30)
            || (CHK_DAYS(5, 1) && !GET_CONFIG_INT_VALUE("p5rpc.events.restoredevents", "hospital"))))
    {
        CALL_EVENT(740, 091);
        BIT_ON(12461);
    }
    if (BIT_CHK(6744) && CHK_DAYS_STARTEND(5, 18, 6, 4) && !CHK_DAYS(5, 30))
    {
        if (GET_CONFIG_INT_VALUE("p5rpc.events.restoredevents", "diner") && !BIT_CHK(12462))
        {
            CALL_EVENT(740, 101);
            BIT_ON(12462);
        }
        else if (GET_CONFIG_INT_VALUE("p5rpc.events.restoredevents", "park") && !BIT_CHK(12463))
        {
            CALL_EVENT(740, 111);
            BIT_ON(12463);
        }
    }
    if (GET_CONFIG_INT_VALUE("p5rpc.events.restoredevents", "kichijoji")
        && BIT_CHK(7144) && !BIT_CHK(12464)
        && CHK_DAYS_STARTEND(6, 21, 7, 8))
    {
